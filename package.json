{
  "name": "micro-identity",
  "version": "0.0.1",
  "description": "Boilerplate for creating identity microservice",
  "main": "src/app.ts",
  "scripts": {
    "dev": "eslint . --ext .ts && nodemon --inspect",
    "offline": "eslint . --ext .ts && serverless offline start",
    "tsoa": "tsoa spec-and-routes",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "deploy:dev": "sls deploy --config iac/resources/acm.serverless.yml --stage dev && node iac/crypto-keys/crypto.js && sls deploy --stage dev",
    "destroy:dev": "sls remove --stage dev && sls remove --config iac/resources/acm.serverless.yml --stage dev ",
    "deploy:uat": "sls deploy --config iac/resources/acm.serverless.yml --stage uat && sls deploy --stage uat ",
    "deploy:prod": "sls deploy --config iac/resources/acm.serverless.yml --stage prod && sls deploy --stage prod"
  },
  "dependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/express": "^4.17.7",
    "@types/shelljs": "^0.8.8",
    "@types/swagger-ui-express": "^4.1.2",
    "aws-lambda": "^1.0.6",
    "aws-sdk": "^2.736.0",
    "aws-xray-sdk": "^3.1.0",
    "aws-xray-sdk-core": "^3.1.0",
    "aws-xray-sdk-express": "^3.1.0",
    "copy-webpack-plugin": "^6.0.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "dotenv-flow": "^3.2.0",
    "email-validator": "^2.0.4",
    "express": "^4.17.1",
    "google-libphonenumber": "^3.2.12",
    "http-errors": "^1.8.0",
    "mysql2": "^2.1.0",
    "nodemon": "^2.0.4",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "serverless-http": "^2.5.0",
    "shelljs": "^0.8.4",
    "source-map-support": "^0.5.10",
    "swagger-express-ts": "^1.0.1",
    "swagger-ui-express": "^4.1.4",
    "tsoa": "^3.3.0-alpha.0",
    "typeorm": "^0.2.25",
    "typeorm-aurora-data-api-driver": "^1.4.0",
    "typescript-rest": "^3.0.1",
    "typescript-rest-swagger": "^1.1.4",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.17",
    "@types/jest": "^26.0.10",
    "@types/node": "^10.17.28",
    "@types/serverless": "^1.72.5",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "^7.6.0",
    "fork-ts-checker-webpack-plugin": "^3.0.1",
    "jest": "^26.4.0",
    "jest-cli": "^26.0.1",
    "jest-html-reporter": "^3.1.3",
    "serverless-domain-manager": "^4.2.0",
    "serverless-dotenv-plugin": "^3.0.0",
    "serverless-offline": "^6.5.0",
    "serverless-webpack": "^5.2.0",
    "ts-jest": "^26.2.0",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "webpack": "^4.29.0",
