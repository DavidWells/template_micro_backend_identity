<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
<style>
  .button {
  background-color: #0083c2;
  border: none;
  color: white;
  padding: 10px;
  text-align: center;
  text-decoration: none;
  display: block;
  font-size: 16px;
  margin: 4px 2px;
  border-radius: 8px;
  float:right;
}


  a {
    color: #0083c2;
    text-decoration: none;
  }
  body {
    margin: 0;
    padding: 0;
    height: 100%;
  }
  .w3-button {
    background-color: #0083c2;
    color: #fff;
  }
  .w3-button:hover {
    background-color: #035074 !important;
    color: #fff !important;
  }
  .container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    padding: 2px 16px;
  }
  .header {
    border-radius: 20px;
    min-height: 62px;
    background-color: #0083c2;
    padding: 0;
  }
  .card {
    box-shadow: 0 4px 8px 0 rgba(75, 75, 75, 0.5);
    transition: 0.3s;
    width: 500px;
    border-radius: 20px;
  }
  .chip {
  display: inline-block;
  padding: 0 25px;
  height: 50px;
  font-size: 16px;
  line-height: 50px;
  border-radius: 25px;
  background-color: #f1f1f1;
}

.chip img {
  float: left;
  margin: 0 10px 0 -25px;
  height: 50px;
  width: 50px;
  border-radius: 50%;
}
.btn {
  border: none;
  background-color: inherit;
  padding: 14px 28px;
  font-size: 16px;
  cursor: pointer;
  display: inline-block;
}

/* On mouse-over */
.btn:hover {background: #eee;}

.success {color: green;}
.info {color: dodgerblue;}
.warning {color: orange;}
.danger {color: red;}
.default {color: black;}
</style>
